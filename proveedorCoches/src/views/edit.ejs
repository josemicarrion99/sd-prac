

<%- include('partials/_header') %>

<div class="container">
    <div class="col-md-5 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/coches/edit/<%= product._id %>" method="POST">

                        <div class="form-group" style="margin-bottom: 1em;">
                            <b>Modelo</b>
                            <input type="text" name="modelo" placeholder="Introduzca el modelo" class="form-control" value="<%= product.modelo %>">
                        </div>
                        <div class="form-group" style="margin-bottom: 1em;">
                            <b>Matricula</b>
                            <input type="text" name="matricula" placeholder="Introduzca la matricula" class="form-control" value="<%= product.matricula %>">
                        </div>
                        <div class="form-group" style="margin-bottom: 1em;">
                            <b>Precio</b>
                            <input type="text" name="precio" placeholder="Introduzca el precio" class="form-control" value="<%= product.precio %>">
                        </div>

                        <button type="submit" class="btn btn-primary"> Actualizar </button>

                    </form>
                </div>
            </div>
        </div>
</div>


<%- include('partials/_footer') %>

